@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Hard!</h1>

</div>

@if (Context.Session.GetString("username") != null && TempData["Message"] != null)
{
    <div class="d-flex justify-content-center">
        <div class="col-md-4 text-center">
            @if (Context.Session.GetString("picPath") != null)
            {
                <img src="@Url.Content(Context.Session.GetString("picPath"))" width="100" height="100" />
            }
            else
            {
                <img src="@Url.Content("~/images/defaultImage.png"))" width="100" height="100" />
            }
            <h3 class="h3 mb-3 font-weight-normal">@TempData["Message"] @Context.Session.GetString("username")!</h3>
        </div>
    </div>
}
else if (TempData["Message"] != null)
{
    <div class="d-flex justify-content-center">
        <div class="col-md-4 text-center">
            <img src="@Url.Content("~/images/defaultImage.png")" width="100" height="100"/>
            <h3 class="h3 mb-3 font-weight-normal">@TempData["Message"]!</h3>

        </div>
    </div>
}